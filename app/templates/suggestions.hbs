<div class="row">

  <h2>
    Suggestions and Requests
    <div class="btn-group btn-group-sm pull-right" role="group" aria-label="">
      <button type="button" class="btn btn-default" {{action 'sort' 'createdAt'}}>Newest</button>
      <button type="button" class="btn btn-default" {{action 'sort' 'total'}}>Popular</button>
    </div>
  </h2>

  <hr>

  <div class="col-md-8">

    {{#each this itemController='suggestion'}}

      <div class="suggestion-item">

        <div class="row">

          <div class="col-sm-2 text-center">

            <div class="vote-circle-box">
              {{vote-circle action="vote"}}
            </div>

            {{#if total}}
              <h2>{{total}}</h2>
            {{else}}
              <h2 class="text-muted">0</h2>
            {{/if}}
            
          </div>

          <div class="col-sm-10">

            <h3>{{#link-to 'suggestion' this}}{{suggestion}}{{/link-to}} <small>Created {{nice-date createdAt}}</small></h3>

            <p class="tags">
              {{#each tags}}
              <span class="label label-info">{{tag}}</span>
              {{/each}}
            </p>

            <p>{{description}}</p>

          </div>

        </div>

      </div>

    {{else}}

      <p class="lead">Looks like we have no suggestions yet!</p>

      <p>Why don't you {{#link-to 'create'}}suggest something{{/link-to}} for us?</p>

    {{/each}}

  </div>

  <div class="col-md-4">

    {{!-- <ul>
      {{#each item in model itemController="suggestion"}}
      <li>{{#link-to 'suggestion' item}}{{item.suggestion}}{{/link-to}} - {{item.total}}</li>
      {{/each}}
    </ul> --}}

  </div>

</div>