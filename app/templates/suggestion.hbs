<div class="row">

  <div class="col-md-8">

    <div class="row">

      <div class="col-sm-2 text-center">

        {{#if total}}
          <h2 class="vote-count" {{bind-attr class="voted"}}>{{total}}</h2>
        {{else}}
          <h2 class="text-muted">0</h2>
        {{/if}}

        <button type="button" class="btn btn-info" {{action 'vote' this}} {{bind-attr disabled="pending"}}>Vote</button>
        
      </div>

      <div class="col-sm-10">

        <h3>{{suggestion}} <small>Created {{nice-date createdAt}}</small></h3>

        <p class="tags">
          {{#each tags}}
          <span class="label label-info">{{tag}}</span>
          {{/each}}
        </p>

        <p>{{showdown-addon description}}</p>

        <div class="panel panel-default notes">
          <div class="panel-body">

            <h4>Comments <small>{{notes.length}}</small></h4>

            {{#each notes itemController="note"}}
              <div class="note">{{note}} <span class="text-muted"> - {{nice-date createdAt}}</span></div>
            {{else}}
              <div class="note"><span class="text-muted">No comments, why don't you leave one?</span></div>
            {{/each}}

            <div class="input-group add-note">
              {{input class="form-control" placeholder="Leave a comment" value=note insert-newline="comment"}}
              <span class="input-group-btn">
                <button class="btn btn-default" type="button" {{action 'comment' this}}>Post</button>
              </span>
            </div>

          </div>
        </div>

      </div>

    </div>

  </div>

  <div class="col-md-4">

  </div>

</div>

{{outlet}}
